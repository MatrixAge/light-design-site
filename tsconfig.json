{
      "compilerOptions": {
            "target": "esnext",
            "module": "esnext",
            "moduleResolution": "node",
            "resolveJsonModule":true,
            "importHelpers": true,
            "jsx": "react",
            "esModuleInterop": true,
            "sourceMap": true,
            "baseUrl": "./",
            "strict": true,
            "paths": {
                  "@root/*": [
                        "./*"
                  ],
                  "@/*": [
                        "src/*"
                  ],
                  "@@/*": [
                        "src/.umi/*"
                  ]
            },
            "allowSyntheticDefaultImports": true
      },
      "include": [
            "mock/**/*",
            "src/**/*",
            "config/**/*",
            ".umirc.ts",
            "typings/typings.d.ts"
      ],
      "exclude": [
            "./node_modules/*"
      ]
}